<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:layout_margin="@dimen/_16sdp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_rounded_bg"
    tools:context=".ui.slot.SlotDialogFragment">
    <EditText
        android:hint="اكتب هنا رقم السلوت المعين |"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:fontFamily="@font/bold"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:focusableInTouchMode="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:textSize="@dimen/_10ssp"
        android:paddingVertical="@dimen/_12sdp"
        android:background="@drawable/stroke_border_black"
        android:id="@+id/slotNumET"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line1">
        <FrameLayout
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line2">
        <FrameLayout
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line3">
        <FrameLayout
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line4">
        <FrameLayout
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مسح"
                android:fontFamily="@font/bold"
                android:drawableStart="@drawable/delete"
                android:drawablePadding="@dimen/_12sdp"
                android:drawableTint="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line5">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="#F55050"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الغاء"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/cancel"/>
        </FrameLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:backgroundTint="#7EC242"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/id_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="موافقة"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:id="@+id/ok"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>