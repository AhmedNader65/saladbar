<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/toolsLayout"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/slotLayout"
            android:background="@drawable/stroke_border_black"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slotTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:fontFamily="@font/bold"
                android:text="اختر رقم سلوت معين"
                android:textColor="@color/black"
                android:textSize="@dimen/_6ssp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/stroke_border"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/keyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_keyboard" />
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/stroke_border_black"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_8sdp"            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:text="اختر اللغة"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_6ssp"
                android:lines="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:background="@drawable/stroke_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6ssp"
                    android:fontFamily="@font/bold"
                    android:text="العربية"/>
                <ImageView
                    android:id="@+id/arabic"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ksa" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/stroke_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6ssp"
                    android:fontFamily="@font/bold"
                    android:text="English"/>
                <ImageView
                    android:id="@+id/english"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/usa" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/stroke_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6ssp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content"
                    android:text="Indian"/>
                <ImageView
                    android:id="@+id/indian"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/india" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/toolsLayout"
        app:layout_constraintBottom_toTopOf="@+id/paginationLayout"
        tools:listitem="@layout/product_item"
        app:spanCount="4"
        tools:itemCount="8"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:id="@+id/recyclerView"/>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paginationLayout"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:textAlignment="center"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/_6sdp"
            android:background="@drawable/id_circular_bg"
            android:id="@+id/previous"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/medium"
            android:background="@drawable/id_circular_bg"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_1sdp"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/page1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/medium"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/page2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:fontFamily="@font/medium"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/page3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:fontFamily="@font/medium"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/ellip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:fontFamily="@font/medium"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/page30"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:textAlignment="center"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/_6sdp"
            android:backgroundTint="#7EC242"
            android:background="@drawable/id_circular_bg"
            android:id="@+id/next"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>