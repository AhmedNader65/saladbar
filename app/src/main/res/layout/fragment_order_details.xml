<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_16sdp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productCard"
        card_view:cardCornerRadius="24"
        card_view:cardElevation="0dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/product_dummy"
            android:scaleType="fitXY"
            android:id="@+id/productIV"/>
        <LinearLayout
            android:paddingVertical="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/prod"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:text="اسم المنتج"
                    android:fontFamily="@font/bold"
                    android:layout_marginStart="@dimen/_8sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="خبز حلومي"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    />


            </LinearLayout>
            <View
                android:background="#F1F2F3"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_height="@dimen/_1sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:text="سعر المنتج"
                    android:fontFamily="@font/bold"
                    android:textColor="#7EC242"
                    android:layout_marginStart="@dimen/_8sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:fontFamily="@font/bold"
                    android:textColor="#7EC242"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="445"
                    android:fontFamily="@font/bold"
                    android:textColor="#7EC242"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ر.س"
                    android:fontFamily="@font/bold"
                    android:textColor="#7EC242"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_4sdp"
                    />
                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_marginVertical="@dimen/_4sdp"
                android:background="#F1F2F3"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_height="@dimen/_1sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slot"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:text="رقم السلوت"
                    android:fontFamily="@font/bold"
                    android:layout_marginStart="@dimen/_8sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/productCard"
        android:id="@+id/qrLayout">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الطلب عبر QR"
                android:fontFamily="@font/bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular"
                android:text="ضع رمز الاستجابة السريعة داخل الإطار
للمسح الضوئي تجنب رجها للحصول
 على نتائج سريعة"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/_14ssp"
                android:maxLines="3"
                android:lines="3"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="@dimen/_1ssp"
                app:autoSizeMaxTextSize="@dimen/_14ssp"
                app:autoSizeMinTextSize="@dimen/_4ssp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/qr_code"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/backBtn"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:background="@drawable/stroke_border_pink"
        app:layout_constraintTop_toBottomOf="@id/qrLayout"
        android:orientation="horizontal" >

        <ImageView
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/back_arrow" />
        <TextView
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#F55A5A"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/_16ssp"
            android:text="رجوع" />
    </LinearLayout>
</LinearLayout>